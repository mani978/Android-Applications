<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/E1"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:hint="Enter Your Registration ID"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/E2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/E2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="7dp"
        android:ems="10"
        android:hint="Physics Marks   /100"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/E3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/E1" />

    <EditText
        android:id="@+id/E3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="269dp"
        android:ems="10"
        android:hint="Chemistry Marks   /100"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/E4"
        app:layout_constraintEnd_toEndOf="@+id/E2"
        app:layout_constraintStart_toStartOf="@+id/E2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/E4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Maths Marks   /100"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/E3"
        app:layout_constraintStart_toStartOf="@+id/E3"
        app:layout_constraintTop_toBottomOf="@+id/E3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="198dp"
        android:text="Enter Subject Marks"
        app:layout_constraintStart_toStartOf="@+id/E2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/B1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="382dp"
        android:layout_marginBottom="6dp"
        android:text="Display"
        app:layout_constraintBottom_toTopOf="@+id/T1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/T1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="15dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B1" />
</androidx.constraintlayout.widget.ConstraintLayout>